<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:mobile.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="WGU Tracker">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        Title="Terms"
        ContentTemplate="{DataTemplate views:TermListPage}"
        Route="TermListPage" />

    <ShellContent
        Title="Term Details"
        ContentTemplate="{DataTemplate views:TermDetailPage}"
        Route="TermDetailPage" />

    <!-- AddTermPage defined here -->
    <ShellContent
        Title="Add Term"
        ContentTemplate="{DataTemplate views:AddTermPage}"
        Route="AddTermPage" />
</Shell>
