<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mobile.Views.AssessmentPage"
             Title="AssessmentPage">
    <Grid Padding="20">
      
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <VerticalStackLayout Grid.Row="0" Spacing="15">
            <Label Text="Choose Assessment Type" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />
            <Button Text="Performance Assessment"
                    Clicked="OnPerformanceAssessmentClicked"
                    HorizontalOptions="Fill" />
            <Button Text="Objective Assessment"
                    Clicked="OnObjectiveAssessmentClicked"
                    HorizontalOptions="Fill" />
        </VerticalStackLayout>


        <Button Grid.Row="2" Text="Back"
                Clicked="OnBackButtonClicked"
                HorizontalOptions="Fill" />
    </Grid>
</ContentPage>